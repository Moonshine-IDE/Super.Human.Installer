[connection]
id={{ openfortivpn_servers[0].name }}
type=vpn
autoconnect=false

[vpn]
authtype=password
autoconnect-flags=0
certsigs-flags=0
cookie-flags=2
enable_csd_trojan=no
gateway={{ openfortivpn_servers[0].server }}:{{ openfortivpn_servers[0].port }}
{% if openfortivpn_servers[0].trusted_cert is defined %}
trusted-cert={{ openfortivpn_servers[0].trusted_cert }}
{% endif %}
gateway-flags=2
gwcert-flags=2
lasthost-flags=0
pem_passphrase_fsid=no
prevent_invalid_cert=no
protocol=fortinet
resolve-flags=2
stoken_source=disabled
xmlconfig-flags=0
service-type=org.freedesktop.NetworkManager.openconnect

[vpn-secrets]
form:_login:username={{ openfortivpn_servers[0].user }}
lasthost={{ openfortivpn_servers[0].server }}:{{ openfortivpn_servers[0].port }}
save_passwords=yes

[ipv4]
method=auto

[ipv6]
addr-gen-mode=default
method=auto

